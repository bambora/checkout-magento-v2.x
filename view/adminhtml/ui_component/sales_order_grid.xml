<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="bambora_order_capture">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_capture</item>
                        <item name="label" xsi:type="string" translate="true">Worldline
                            Invoice and Capture
                        </item>
                        <item name="url" xsi:type="url"
                            path="bambora/order/massinvoicecapture" />
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">
                                Invoice and Capture Order(s)
                            </item>
                            <item name="message" xsi:type="string" translate="true">
                                Are you sure you want to invoice and capture selected
                                items?
                            </item>
                        </item>
                    </item>
                </argument>
            </action>
            <action name="bambora_cancel">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">cancel</item>
                        <item name="label" xsi:type="string" translate="true">Worldline
                            Cancel and Void
                        </item>
                        <item name="url" xsi:type="url"
                            path="bambora/order/masscancelvoid" />
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">
                                Cancel and Void Order(s)
                            </item>
                            <item name="message" xsi:type="string" translate="true">
                                Are you sure you want to cancel and void selected
                                items?
                            </item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>