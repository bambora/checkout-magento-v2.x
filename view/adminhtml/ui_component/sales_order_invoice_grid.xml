<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="bambora_order_invoice_refund">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_invoice_refund
                        </item>
                        <item name="label" xsi:type="string" translate="true">Worldline
                            Refund Invoice
                        </item>
                        <item name="url" xsi:type="url"
                            path="bambora/order/massinvoicerefund" />
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">
                                Worldline refund invoice(s)
                            </item>
                            <item name="message" xsi:type="string" translate="true">
                                Are you sure you want to refund selected items?
                            </item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>